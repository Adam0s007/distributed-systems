<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Weather Forecast</title>
</head>
<body class="body">
    <header>
        <ul>
            <li><a href="/">Return to search</a></li>
            <li>
                <form method="post" action="/randomCity">
                    <input type="date" name="startDate" required>
                    <input type="date" name="endDate" required>
                    <button type="submit">Check random city</button>
                </form>
            </li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </header>
    <main class="container">
        <h1 class="title">Weather Forecast for <%= city %></h1>
        <p><strong>Average Temperature:</strong> <%= statistics.averageTemp.toFixed(2) %>°C</p>
        <p><strong>Max Temperature:</strong> <%= statistics.maxTemp %>°C</p>
        <p><strong>Min Temperature:</strong> <%= statistics.minTemp %>°C</p>
        <p><strong>Average UV Index:</strong> <%= statistics.averageUVIndex.toFixed(2) %></p>
        <!-- You can add more statistics here -->
        <div class="forecast">
            <h2>Detailed Forecast</h2>
            <% days.forEach(function(day) { %>
                <div class="forecast-day">
                    <h3><%= day.datetime %></h3>
                    <p><strong>Max Temperature:</strong> <%= day.tempmax %>°C</p>
                    <p><strong>Min Temperature:</strong> <%= day.tempmin %>°C</p>
                    <p><strong>Conditions:</strong> <%= day.conditions %></p>
                    <p><strong>Sunrise:</strong> <%= day.sunrise %></p>
                    <p><strong>Sunset:</strong> <%= day.sunset %></p>
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>
