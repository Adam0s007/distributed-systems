<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Weather Forecast</title>
</head>
<body class="body">
    <div class="container">
        <h1 class="title">Weather Forecast for <%= weather.resolvedAddress %></h1>
        <div class="current-conditions">
            <p><strong>Description:</strong> <%= weather.description %></p>
            <p><strong>Temperature:</strong> <%= weather.currentConditions.temp %>°C</p>
            <p><strong>Conditions:</strong> <%= weather.currentConditions.conditions %></p>
            <p><strong>Wind Speed:</strong> <%= weather.currentConditions.windspeed %> km/h</p>
            <p><strong>Humidity:</strong> <%= weather.currentConditions.humidity %>%</p>
        </div>
        <div class="forecast">
            <h2>Forecast</h2>
            <% weather.days.forEach(function(day) { %>
                <div class="forecast-day">
                    <h3><%= day.datetime %></h3>
                    <p><strong>Max Temperature:</strong> <%= day.tempmax %>°C</p>
                    <p><strong>Min Temperature:</strong> <%= day.tempmin %>°C</p>
                    <p><strong>Conditions:</strong> <%= day.conditions %></p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
